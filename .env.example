# =============================================================================
# Port Configuration (define first so URLs can reference them)
# =============================================================================
BACKEND_PORT=5000
FRONTEND_PORT=5173
POSTGRES_PORT=5433
REDIS_PORT=6380

# =============================================================================
# PostgreSQL Database Configuration
# =============================================================================
POSTGRES_USER=spending_user
POSTGRES_PASSWORD=spending_password_change_me
POSTGRES_DB=spending_db
POSTGRES_HOST=localhost

# Migration Status
MIGRATION_COMPLETED=false

# =============================================================================
# TrueLayer API Configuration
# =============================================================================
TRUELAYER_CLIENT_ID=your_client_id_here
TRUELAYER_CLIENT_SECRET=your_client_secret_here
TRUELAYER_REDIRECT_URI=http://localhost:${BACKEND_PORT}/api/truelayer/callback
TRUELAYER_ENVIRONMENT=sandbox  # or 'production'

# =============================================================================
# Gmail API Configuration (for receipt integration)
# =============================================================================
# Create credentials at: https://console.cloud.google.com/apis/credentials
# Enable the Gmail API: https://console.cloud.google.com/apis/library/gmail.googleapis.com
# Required scopes: https://www.googleapis.com/auth/gmail.readonly
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:${BACKEND_PORT}/api/gmail/callback

# =============================================================================
# Application Configuration
# =============================================================================
FLASK_ENV=development
FLASK_SECRET_KEY=your_flask_secret_key_change_me
FRONTEND_URL=http://localhost:${FRONTEND_PORT}

# =============================================================================
# LLM Configuration (for AI-based transaction enrichment)
# =============================================================================
LLM_PROVIDER=anthropic
LLM_MODEL=claude-sonnet-4-5-20250929
LLM_API_KEY=your_llm_api_key_here
LLM_TIMEOUT=30
LLM_MAX_RETRIES=3
LLM_BATCH_SIZE=10
LLM_CACHE_ENABLED=true

# =============================================================================
# Anthropic Claude API (for AI categorization)
# =============================================================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# Encryption Key (for storing OAuth tokens)
# =============================================================================
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_fernet_encryption_key_here

# =============================================================================
# Celery Configuration (for asynchronous enrichment tasks)
# =============================================================================
CELERY_BROKER_URL=redis://localhost:${REDIS_PORT}/0
CELERY_RESULT_BACKEND=redis://localhost:${REDIS_PORT}/0
